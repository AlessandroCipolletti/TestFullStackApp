datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstname String
  lastname  String
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
